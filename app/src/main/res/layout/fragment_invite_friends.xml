<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.orderpro.customer.ui.CartItemActivity">


    <LinearLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0174df"
        android:padding="6dp"
        android:weightSum="3">

        <ImageView

            android:id="@+id/drawer_icon"
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:layout_weight="0.1"
            android:src="@drawable/drawer"
            />

        <com.orderpro.customer.customfonts.Custom_text
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="2.5"
            android:text="Invite Friends"
            android:textColor="#ffffff"
            android:textSize="18dp" />


        <!--<ImageView-->
        <!--android:layout_width="25dp"-->
        <!--android:layout_height="25dp"-->
        <!--android:layout_gravity="right|center"-->
        <!--android:layout_marginLeft="40dp"-->
        <!--android:layout_weight="0.1"-->
        <!--android:background="@drawable/icon_cart_wh" />-->
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.orderpro.customer.customfonts.Custom_Txt_Bold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Invite Friends"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/invite_bg" />

    <com.orderpro.customer.customfonts.Custom_Txt_Bold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Refer a Friend. Get Order Points!"
        android:textColor="#000000"
        android:textSize="20sp" />


    <com.orderpro.customer.customfonts.Custom_text
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Invite Friends for free and get referral\npoints for each invitation.Your friends\nalso get welcome points."
        android:textAlignment="center"
        android:textColor="#85000000"
        android:textSize="16sp" />

    <com.orderpro.customer.customfonts.Custom_Txt_Bold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Share Order Pro Now :"
        android:textColor="#000000"
        android:textSize="16sp" />


    <com.orderpro.customer.customfonts.Custom_Btntxt
        android:id="@+id/btnInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_btn"
        android:text="invite"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>